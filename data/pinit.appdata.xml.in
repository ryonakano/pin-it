    <screenshot>
      <caption>Edit View</caption>
      <image>https://raw.githubusercontent.com/ryonakano/pinit/main/data/screenshots/pantheon/screenshot-edit-view.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

